@model IEnumerable<EMS.Models.Employee>

    <h1> Listing Employee </h1>
<div style="text-align:right">

    <a asp-controller="Emp" asp-action="Create">Add Employee </a>

</div>
<table class = "table">
    <thead>

        <th>
            @Html.DisplayNameFor(e=>e.EmpId)
        </th>
        <th>
            @Html.DisplayNameFor(e=>e.Name)
        </th>
        <th>
            @Html.DisplayNameFor(e=>e.Dept.DeptName)
        </th>
        <th>
            @Html.DisplayNameFor(e=>e.Dept.Location)
        </th>

    </thead>
    <tbody>
        @foreach (var i in @Model){

            <tr>
                <td>
                    @i.EmpId
                </td>
                <td>
                    @i.Name
                </td>
                <td>
                    @i.Dept.DeptName
                </td>
                 <td>
                    @i.Dept.Location
                </td>
                <td>
                    <a asp-controller="Employees" asp-action="Display" asp-route-id = i.Id>Display</a>
                    &nbsp;&nbsp;&nbsp;
                    
                </td>
            </tr>
        }
    </tbody>

</table>

